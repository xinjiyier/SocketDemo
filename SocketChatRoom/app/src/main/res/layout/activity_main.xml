<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cxp.shopping.socketchatroom.MainActivity">

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_link_ip"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="10.0.2.2"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/bt_link"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/link_to_service"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_talk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_top"
        android:text="Hello World!" />

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_send_text"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:minLines="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:hint="@string/talk_text"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/bt_send"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/send_to_service"/>

    </LinearLayout>
</RelativeLayout>
